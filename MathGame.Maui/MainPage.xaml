<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathGame.Maui.MainPage"
             BackgroundImageSource="bg.jpg">

    <ContentView>
        <VerticalStackLayout
            Spacing="25" 
            Padding="50" 
            >
            <Image Source="Resources/Images/bg.jpg"
                   Aspect="AspectFit" />
            <Label
                Text= "This is your maths game!"
                FontSize="32"
                TextColor="White"
                FontFamily="RobotoBold"
                HorizontalOptions="Center"/>
            <Label
                Text= "What game would you like to play?"
                FontSize="32"
                TextColor="White"
                FontFamily="RobotoBold"
                HorizontalOptions="Center"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height= "200"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        MaximumWidthRequest="100"
                        Text="+"
                        Clicked="OnGameChosen"
                        FontSize="50"
                        FontFamily="RobotoBold"/>
                <Button Grid.Column ="1"
                        MaximumWidthRequest="100"
                        Text="−"
                        Clicked="OnGameChosen"
                        FontSize="50"
                        FontFamily="RobotoBold"/>
                <Button Grid.Column ="2"
                        MaximumWidthRequest="100"
                        Text="×"
                        Clicked="OnGameChosen"
                        FontSize="50"
                        FontFamily="RobotoBold"/>
                <Button Grid.Column ="3"
                        MaximumWidthRequest="100"
                        Text="÷"
                        Clicked="OnGameChosen"
                        FontSize="50"
                        FontFamily="RobotoBold"/>
                <Button Grid.Row ="1"
                        Grid.ColumnSpan="4"
                        BackgroundColor="DarkGreen"
                        Text="View Previous Games"
                        Clicked="OnViewPreviousGamesChosen"
                        MaximumWidthRequest="500"
                        MaximumHeightRequest="70"
                        FontSize="32"
                        FontFamily="RobotoBold"/>
            </Grid>
        </VerticalStackLayout>
    </ContentView>

</ContentPage>
